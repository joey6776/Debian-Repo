#function creation
#!/bin/bash
intro(){ 
    start="y"
    echo "we are playing Rock Paper Scissors"
    read -p "Start game?:" start
    echo "starting game.." 

} 
#intro finished
player_choice_moves(){
local rock="one"
local paper="two"
local scissors="three"
local moves= $rock $paper $scissors
    read -p "choose a move:" $moves then 
    if [[$moves=rock]]
    echo "you chose: rock"
#trying alternative choice selection based code
}
intro
player_choice_moves
1) 
   rock
   echo "you chose: rock"
   ;;
2)
   paper
   echo "you chose: paper"
   ;;
3) 
   scissors
   echo "you chose: scissors"
   ;;
*) 
   read -p "your move:" $move
   echo "turn made"
   esac
   }
#i redid my coding method
player_choice_move(){
echo "==CHOOSE UR MOVE=="
echo "1) ROCK"
echo "2) PAPER"
echo "3) SCISSORS"
read -p "ur move:" choice
      case $choice in
#made a case statement for the player
    1)
    echo "you chose: ROCK "
       ;;
    2)
    echo "you chose: PAPER"
       ;;
    3)
    echo "you chose: SCISSORS"
       ;;
    *)
    echo "invalid choice"
       ;;
    esac
    }
#case for computer
comp_choice_game(){
        RANDNUM=$((RANDOM % 3 + 1))
        case $RANDNUM in
#picks random number from 1-3
1)
    { if [[ $player_choice_move -eq 2 ]] then echo "U win"
    elif [[ $player_choice_move -eq 3 ]] then echo "comp won"
    elif [[ $player_choice_move -eq 1 ]] then echo "TIE"
    fi
    }
    ;;
    
    2)
    { if [[ $player_choice_move -eq 3 ]] then echo "U win"
    elif [[ $player_choice_move -eq 1 ]] then echo "comp won"
    elif [[ $player_choice_move -eq 2 ]] then echo "TIE"
    fi
    }
    ;;
    
    3)
    { if [[ $player_choice_move -eq 2 ]] then echo "U win"
    elif [[ $player_choice_move -eq 1 ]] then echo "comp won"
    elif [[ $player_choice_move -eq 3 ]] then echo "TIE"
    fi
    }
    ;;
    *) 
    echo "invalid move"
    ;;
    esac
    }
